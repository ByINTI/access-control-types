{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "esnext"
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
  ]
}
